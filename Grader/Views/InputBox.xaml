<Window x:Class="Grader.Views.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Grader.Views"
             mc:Ignorable="d" 
             Height="150" Background="White" Width="500">
    <StackPanel Margin="10" VerticalAlignment="Bottom">
        <Label Name="Label"></Label>
        <TextBox Name="TextBox"></TextBox>
        <Button Click="ButtonBase_OnClick" Margin="0,10" HorizontalAlignment="Right" MinWidth="100">OK</Button>
    </StackPanel>
</Window>
